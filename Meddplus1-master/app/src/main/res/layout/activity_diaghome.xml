<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottomheart"
    android:orientation="vertical"

    tools:context=".diaghome">
    


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="280dp"
                android:background="@drawable/messenger"
                android:onClick="notifdiag" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/rounded_corner"
                android:text="blood test" />

            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/rounded_corner"
                android:text="ecg" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/rounded_corner"
                android:text="sugar test" />

            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/rounded_corner"
                android:text="biopsy" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/rounded_corner"
                android:text="ct scan" />

            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/rounded_corner"
                android:text="eeg" />
        </LinearLayout>

        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/rounded_corner"
                android:text="mri scan" />

            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/rounded_corner"
                android:text="ultra sound" />
        </LinearLayout>-->

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="bottom|center"
            android:layout_marginTop="100dp"

            android:background="@android:color/holo_orange_light"
            android:onClick="addtest"
            app:backgroundTint="#673AB7"
            app:fabSize="normal"
            app:layout_anchorGravity="bottom|center"
            app:srcCompat="@drawable/ic_add_circle_black_24dp"
            tools:ignore="VectorDrawableCompat" />
    </LinearLayout>
</ScrollView>